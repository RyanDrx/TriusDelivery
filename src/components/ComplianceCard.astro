---
interface Props {
    icon: string;
    title: string;
    description: string;
    gradient: 'primary' | 'secondary' | 'accent';
    features: string[];
}

const { icon, title, description, gradient, features } = Astro.props;

const gradientClasses = {
    primary: 'from-primary/5 to-primary/10',
    secondary: 'from-secondary/5 to-secondary/10',
    accent: 'from-accent/5 to-accent/10'
};

const iconGradientClasses = {
    primary: 'from-primary to-primary-dark',
    secondary: 'from-secondary to-secondary-dark',
    accent: 'from-accent to-accent-dark'
};
---

<div class={`bg-gradient-to-br ${gradientClasses[gradient]} rounded-2xl p-8 text-center`}>
    <div class={`w-20 h-20 bg-gradient-to-br ${iconGradientClasses[gradient]} rounded-2xl flex items-center justify-center mx-auto mb-6`}>
        <iconify-icon icon={icon} width='40' height='40' style='color: white;'></iconify-icon>
    </div>
    <h3 class='text-2xl font-bold text-neutral-dark mb-4'>{title}</h3>
    <p class='text-neutral mb-6 leading-relaxed'>{description}</p>
    <ul class='text-sm text-neutral space-y-2 text-left'>
        {
            features.map((feature) => (
                <li class='flex items-center gap-2'>
                    <iconify-icon icon='heroicons:check' width='16' height='16' style='color: #2f855a;' />
                    {feature}
                </li>
            ))
        }
    </ul>
</div>
