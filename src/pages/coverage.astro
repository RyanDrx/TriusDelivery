---
import Layout from '@layouts/Layout.astro';
import SEO from '@components/SEO.astro';
import Hero from '@components/Hero.astro';
import Cta from '@components/Cta.astro';
import InteractiveCoverageMap from '@components/InteractiveCoverageMap.astro';
import { localBusiness, webSite } from '../lib/schema.ts';

// No heroData object needed - we'll define the hero content directly in the component

const mapData = {
    _type: 'section',
    title: 'Coverage Map',
    subtitle: 'Explore our service areas and major cities',
    body: 'Our comprehensive coverage spans across the Pacific Northwest and Northern California, connecting major medical facilities, research centers, and healthcare networks. Browse the top 10 cities in each state we serve and learn about our specialized service levels.'
};

const ctaData = {
    _type: 'ctaSection',
    heading: 'Not Sure if We Cover Your Area?',
    body: "Contact us to verify coverage for your specific location and discuss service options. We're always expanding our network to better serve healthcare facilities.",
    cta: [
        {
            _key: '1',
            _type: 'actionButton',
            label: 'Check Coverage',
            url: '/contact',
            theme: 'primary'
        },
        {
            _key: '2',
            _type: 'actionLink',
            label: 'View Our Services',
            url: '/services'
        }
    ]
};

const schema = {
    '@context': 'https://schema.org',
    '@graph': [localBusiness(), webSite()]
};
---

<Layout
    title='Service Coverage Map - Trius LLC Medical Courier Services'
    description='Explore Trius LLC medical courier coverage across Washington, Oregon, Idaho, Montana, and California. Interactive map with top 10 cities, service levels, and facility locations for STAT deliveries and specialized transport.'
>
    <Fragment slot='head'>
        <SEO
            title='Service Coverage Map - Trius LLC Medical Courier Services'
            description='Explore Trius LLC medical courier coverage across Washington, Oregon, Idaho, Montana, and California. Interactive map with top 10 cities, service levels, and facility locations for STAT deliveries and specialized transport.'
            graph={schema}
        />
    </Fragment>

    <Hero
        backgroundImage='/Images/couriour boxes.webp'
        overlayClass='bg-gradient-to-r from-primary/80 via-primary/60 to-secondary/70'
        minHeight='min-h-[70vh]'
    >
        <div class='text-center max-w-5xl mx-auto'>
            <!-- Page Badge -->
            <div class='inline-flex items-center gap-3 mb-8 px-6 py-3 bg-white/20 backdrop-blur-sm rounded-full border border-white/30'>
                <iconify-icon icon='material-symbols:map' width='24' height='24' style='color: white;'></iconify-icon>
                <span class='text-white font-bold tracking-wide uppercase'>Coverage Areas</span>
            </div>

            <!-- Main Title -->
            <h1 class='text-4xl lg:text-6xl font-black text-white mb-6 leading-tight'>Service Coverage Areas</h1>

            <!-- Subtitle -->
            <div class='flex flex-wrap justify-center gap-4 mb-8 text-white/90 font-medium'>
                <span class='flex items-center gap-2'>
                    <iconify-icon icon='heroicons:map-pin' width='20' height='20'></iconify-icon>
                    5 States Covered
                </span>
                <span class='flex items-center gap-2'>
                    <iconify-icon icon='heroicons:building-office-2' width='20' height='20'></iconify-icon>
                    500+ Medical Facilities
                </span>
                <span class='flex items-center gap-2'>
                    <iconify-icon icon='heroicons:clock' width='20' height='20'></iconify-icon>
                    24/7 STAT Service
                </span>
            </div>

            <!-- Description -->
            <p class='text-xl lg:text-2xl text-white/90 mb-10 max-w-4xl mx-auto leading-relaxed'>
                Explore our service coverage map to discover medical courier services across Washington, Oregon, Idaho, Montana, and
                Northern California. Click on our coverage areas to learn about service levels and major cities we serve.
            </p>

            <!-- Action Buttons -->
            <div class='flex flex-col sm:flex-row gap-4 justify-center items-center'>
                <a href='/contact' class='btn btn-secondary btn-lg px-8 py-4 text-lg font-bold hover:scale-105 transition-all duration-300'>
                    Check Availability
                </a>
                <a
                    href='/services'
                    class='text-white font-semibold hover:text-secondary-light transition-colors duration-300 flex items-center gap-2'
                >
                    View Our Services
                    <iconify-icon icon='heroicons:arrow-right' width='20' height='20'></iconify-icon>
                </a>
            </div>
        </div>
    </Hero>

    <!-- Coverage Map Section with Background -->
    <section class='relative overflow-hidden bg-gray-50'>
        <!-- Desktop Background Image -->
        <div class='absolute inset-0 opacity-2 hidden lg:block'>
            <div
                class='absolute inset-0'
                style='background-image: url("/Images/Courier back.webp"); background-size: cover; background-repeat: no-repeat; background-position: center;'
            >
            </div>
        </div>

        <!-- Mobile/Tablet Simple Background -->
        <div class='absolute inset-0 lg:hidden bg-gradient-to-br from-gray-50 via-primary/3 to-secondary/3'>
        </div>

      

        <div class='relative z-10'>
            <InteractiveCoverageMap {...mapData} />
        </div>
    </section>

    <Cta {...ctaData} />
</Layout>
