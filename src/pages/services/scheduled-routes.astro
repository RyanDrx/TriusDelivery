---
import Layout from '@layouts/Layout.astro';
import SEO from '@components/SEO.astro';
import Hero from '@components/Hero.astro';
import Cards from '@components/Cards.astro';
import Section from '@components/Section.astro';
import Cta from '@components/Cta.astro';
import { graphServiceRoutes } from '../../lib/schema.ts';

const heroData = {
    _type: 'heroSection',
    heading: 'Scheduled Medical Courier Routes',
    body: 'Recurring pickups and deliveries for clinics, labs, and research centers. Route optimization improves reliability and reduces transit time for your regular medical logistics needs.',
    cta: [
        {
            _key: '1',
            _type: 'actionButton',
            label: 'Schedule Routes',
            url: '/contact?service=routes',
            theme: 'primary'
        },
        {
            _key: '2',
            _type: 'actionLink',
            label: 'View All Services',
            url: '/services'
        }
    ]
};

const benefitsData = {
    _type: 'cardsSection',
    heading: 'Scheduled Route Benefits',
    body: 'Our scheduled route service provides predictable, cost-effective logistics for healthcare facilities with regular courier needs.',
    items: [
        {
            _key: '1',
            heading: 'Cost Efficiency',
            body: 'Optimize your logistics budget with scheduled routes that reduce per-delivery costs through bulk transport and route efficiency.',
            icon: 'mdi:currency-usd',
            iconColor: 'primary' as const,
            features: [
                { icon: 'mdi:chart-line', text: 'Volume discounts available' },
                { icon: 'mdi:calculator', text: 'Predictable monthly costs' },
                { icon: 'mdi:map', text: 'Route optimization savings' }
            ]
        },
        {
            _key: '2',
            heading: 'Reliability',
            body: 'Consistent pickup and delivery times with dedicated courier assignments ensure your operations run smoothly.',
            icon: 'mdi:clock-check',
            iconColor: 'accent' as const,
            features: [
                { icon: 'mdi:account-tie', text: 'Dedicated courier teams' },
                { icon: 'mdi:calendar-check', text: 'Guaranteed time windows' },
                { icon: 'mdi:backup-restore', text: 'Backup coverage available' }
            ]
        },
        {
            _key: '3',
            heading: 'Flexibility',
            body: 'Adapt your routes as your needs change with flexible scheduling options and route modifications.',
            icon: 'mdi:calendar-edit',
            iconColor: 'secondary' as const,
            features: [
                { icon: 'mdi:clock-time-four', text: 'Multiple frequency options' },
                { icon: 'mdi:route', text: 'Easy route modifications' },
                { icon: 'mdi:calendar-plus', text: 'Holiday schedule adjustments' }
            ]
        }
    ]
};

const routeTypesData = {
    _type: 'cardsSection',
    heading: 'Route Scheduling Options',
    body: 'Choose from various scheduling options designed to meet different facility needs and logistics requirements.',
    items: [
        {
            _key: '1',
            heading: 'Daily Routes',
            body: 'Monday through Friday daily pickups and deliveries for high-volume facilities requiring frequent service.',
            icon: 'mdi:calendar-today',
            iconColor: 'primary' as const,
            features: [
                { icon: 'mdi:clock-time-eight', text: 'Morning and afternoon options' },
                { icon: 'mdi:clock-fast', text: 'Same-day turnaround available' },
                { icon: 'mdi:priority-high', text: 'Priority handling for urgent items' }
            ]
        },
        {
            _key: '2',
            heading: 'Weekly Routes',
            body: 'One to three times per week service ideal for medium-volume facilities with predictable logistics needs.',
            icon: 'mdi:calendar-week',
            iconColor: 'secondary' as const,
            features: [
                { icon: 'mdi:calendar-check', text: 'Flexible day selection' },
                { icon: 'mdi:repeat', text: 'Consistent weekly schedule' },
                { icon: 'mdi:currency-usd', text: 'Cost-effective for medium volume' }
            ]
        },
        {
            _key: '3',
            heading: 'Bi-Weekly Routes',
            body: 'Every other week service for lower-volume facilities or specialized research materials with longer processing times.',
            icon: 'mdi:calendar-month',
            iconColor: 'accent' as const,
            features: [
                { icon: 'mdi:microscope', text: 'Perfect for research facilities' },
                { icon: 'mdi:chart-line-variant', text: 'Lower volume optimization' },
                { icon: 'mdi:clock-outline', text: 'Extended processing accommodation' }
            ]
        },
        {
            _key: '4',
            heading: 'Custom Routes',
            body: 'Tailored routing solutions for unique requirements, multi-location facilities, or specialized logistics needs.',
            icon: 'mdi:cog',
            iconColor: 'neutral' as const,
            features: [
                { icon: 'mdi:map-marker-multiple', text: 'Multi-stop optimization' },
                { icon: 'mdi:puzzle', text: 'Specialized handling integration' },
                { icon: 'mdi:clock-edit', text: 'Custom timing requirements' }
            ]
        }
    ]
};

const setupProcessData = {
    _type: 'section',
    heading: 'Route Setup Process',
    body: 'Getting started with scheduled routes is simple. Our logistics team works with you to design the optimal route for your needs.'
};

const ctaData = {
    _type: 'ctaSection',
    heading: 'Ready to Optimize Your Medical Logistics?',
    body: 'Let us design a scheduled route solution that reduces costs and improves reliability for your medical courier needs.',
    cta: [
        {
            _key: '1',
            _type: 'actionButton',
            label: 'Get Route Estimate',
            url: '/contact?service=routes',
            theme: 'primary'
        },
        {
            _key: '2',
            _type: 'actionLink',
            label: 'View Coverage Areas',
            url: '/coverage'
        }
    ]
};

const schema = graphServiceRoutes();
---

<Layout
    title='Scheduled Medical Courier Routes | Trius LLC'
    description='Cost-effective scheduled medical courier routes for clinics, labs, and research centers. Recurring pickups and deliveries with route optimization and reliable timing.'
>
    <Fragment slot='head'>
        <SEO
            title='Scheduled Medical Courier Routes | Trius LLC'
            description='Cost-effective scheduled medical courier routes for clinics, labs, and research centers. Recurring pickups and deliveries with route optimization and reliable timing.'
            graph={schema}
        />
    </Fragment>

    <Hero
        backgroundImage='/Images/vehicle package.webp'
        overlayClass='bg-gradient-to-r from-secondary/80 via-secondary/60 to-primary/70'
        minHeight='min-h-[70vh]'
    >
        <div class='text-center max-w-5xl mx-auto'>
            <!-- Page Badge -->
            <div class='inline-flex items-center gap-3 mb-8 px-6 py-3 bg-white/20 backdrop-blur-sm rounded-full border border-white/30'>
                <iconify-icon icon='heroicons:calendar-days' width='24' height='24' style='color: white;'></iconify-icon>
                <span class='text-white font-bold tracking-wide uppercase'>Scheduled Service</span>
            </div>

            <!-- Main Title -->
            <h1 class='text-4xl lg:text-6xl font-black text-white mb-6 leading-tight'>Scheduled Medical Courier Routes</h1>

            <!-- Subtitle -->
            <div class='flex flex-wrap justify-center gap-4 mb-8 text-white/90 font-medium'>
                <span class='flex items-center gap-2'>
                    <iconify-icon icon='heroicons:currency-dollar' width='20' height='20'></iconify-icon>
                    Cost Effective
                </span>
                <span class='flex items-center gap-2'>
                    <iconify-icon icon='heroicons:user-group' width='20' height='20'></iconify-icon>
                    Dedicated Teams
                </span>
                <span class='flex items-center gap-2'>
                    <iconify-icon icon='heroicons:map' width='20' height='20'></iconify-icon>
                    Route Optimization
                </span>
            </div>

            <!-- Description -->
            <p class='text-xl lg:text-2xl text-white/90 mb-10 max-w-4xl mx-auto leading-relaxed'>
                Recurring pickups and deliveries for clinics, labs, and research centers. Our scheduled routes provide efficiency,
                consistency, and cost savings for your regular medical logistics needs.
            </p>

            <!-- Action Buttons -->
            <div class='flex flex-col sm:flex-row gap-4 justify-center items-center'>
                <a
                    href='/contact?service=routes'
                    class='btn btn-secondary btn-lg px-8 py-4 text-lg font-bold hover:scale-105 transition-all duration-300'
                >
                    Schedule Routes
                </a>
                <a
                    href='/coverage'
                    class='text-white font-semibold hover:text-secondary-light transition-colors duration-300 flex items-center gap-2'
                >
                    View Coverage Areas
                    <iconify-icon icon='heroicons:arrow-right' width='20' height='20'></iconify-icon>
                </a>
            </div>
        </div>
    </Hero>
    <Cards {...benefitsData} />
    <Cards {...routeTypesData} />

    <Section {...setupProcessData}>
        <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 relative'>
            <!-- Animated progress line showing momentum (desktop only) -->
            <div class='hidden lg:block absolute top-11 left-[12.5%] right-[12.5%] h-0.5 -z-10'>
                <div class='absolute inset-0 bg-gradient-to-r from-primary/10 via-primary/20 to-primary/30'></div>
                <div class='absolute inset-0 bg-gradient-to-r from-primary/60 to-transparent w-0 animate-progress-flow'></div>
            </div>

            <!-- Arrow connectors showing forward movement (desktop only) -->
            <div class='hidden lg:block absolute top-10 left-[calc(25%-1.5rem)] text-primary/40 text-2xl transform translate-x-8'>→</div>
            <div class='hidden lg:block absolute top-10 left-[calc(50%-1.5rem)] text-primary/40 text-2xl transform translate-x-8'>→</div>
            <div class='hidden lg:block absolute top-10 left-[calc(75%-1.5rem)] text-primary/40 text-2xl transform translate-x-8'>→</div>

            <!-- Step 1 - Starting momentum -->
            <div
                class='bg-gradient-to-br from-base-200 to-base-300/50 p-6 rounded-xl border-2 border-primary/20 hover:border-primary/40 hover:shadow-lg hover:shadow-primary/10 transition-all duration-300 group transform hover:-translate-y-1'
            >
                <div class='text-center mb-4'>
                    <div
                        class='w-14 h-14 bg-gradient-to-br from-primary/90 to-primary-dark text-white rounded-full flex items-center justify-center text-xl font-bold mx-auto shadow-lg shadow-primary/30 group-hover:scale-110 group-hover:shadow-xl group-hover:shadow-primary/40 transition-all duration-300 relative overflow-hidden ring-2 ring-primary/20 ring-offset-2'
                    >
                        <span class='relative z-10 text-white'>1</span>
                        <span
                            class='absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700'
                        ></span>
                    </div>
                </div>
                <h4 class='font-bold text-center mb-2 text-base text-primary'>Needs Assessment</h4>
                <p class='text-sm text-center text-base-content/80 leading-relaxed'>
                    We analyze your volume, timing, and special requirements to design the optimal route.
                </p>
            </div>

            <!-- Step 2 - Building momentum -->
            <div
                class='bg-gradient-to-br from-base-200 to-base-300/60 p-6 rounded-xl border-2 border-primary/30 hover:border-primary/50 hover:shadow-lg hover:shadow-primary/10 transition-all duration-300 group transform hover:-translate-y-1'
            >
                <div class='text-center mb-4'>
                    <div
                        class='w-14 h-14 bg-gradient-to-br from-primary to-primary-dark text-white rounded-full flex items-center justify-center text-xl font-bold mx-auto shadow-lg shadow-primary/30 group-hover:scale-110 group-hover:shadow-xl group-hover:shadow-primary/40 transition-all duration-300 relative overflow-hidden ring-2 ring-primary/30 ring-offset-2'
                    >
                        <span class='relative z-10 text-white'>2</span>
                        <span
                            class='absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700'
                        ></span>
                    </div>
                </div>
                <h4 class='font-bold text-center mb-2 text-base text-primary'>Route Design</h4>
                <p class='text-sm text-center text-base-content/80 leading-relaxed'>
                    Our logistics team creates an optimized route plan with timing and pricing details.
                </p>
            </div>

            <!-- Step 3 - Accelerating momentum -->
            <div
                class='bg-gradient-to-br from-base-200 to-base-300/70 p-6 rounded-xl border-2 border-primary/40 hover:border-primary/60 hover:shadow-lg hover:shadow-primary/10 transition-all duration-300 group transform hover:-translate-y-1'
            >
                <div class='text-center mb-4'>
                    <div
                        class='w-14 h-14 bg-gradient-to-br from-primary to-primary-dark text-white rounded-full flex items-center justify-center text-xl font-bold mx-auto shadow-lg shadow-primary/30 group-hover:scale-110 group-hover:shadow-xl group-hover:shadow-primary/40 transition-all duration-300 relative overflow-hidden ring-2 ring-primary/40 ring-offset-2'
                    >
                        <span class='relative z-10 text-white'>3</span>
                        <span
                            class='absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700'
                        ></span>
                    </div>
                </div>
                <h4 class='font-bold text-center mb-2 text-base text-primary'>Team Assignment</h4>
                <p class='text-sm text-center text-base-content/80 leading-relaxed'>
                    Dedicated courier team assignment ensures consistency and familiarity with your needs.
                </p>
            </div>

            <!-- Step 4 - Peak momentum/completion -->
            <div
                class='bg-gradient-to-br from-base-200 to-base-300/80 p-6 rounded-xl border-2 border-primary/50 hover:border-primary/70 hover:shadow-xl hover:shadow-primary/20 transition-all duration-300 group transform hover:-translate-y-2'
            >
                <div class='text-center mb-4'>
                    <div
                        class='w-14 h-14 bg-gradient-to-br from-primary to-primary-dark text-white rounded-full flex items-center justify-center text-xl font-bold mx-auto shadow-xl shadow-primary/40 group-hover:scale-110 group-hover:shadow-2xl group-hover:shadow-primary/50 transition-all duration-300 relative overflow-hidden ring-2 ring-primary/50 ring-offset-2'
                    >
                        <span class='relative z-10 text-white'>4</span>
                        <span
                            class='absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700'
                        ></span>
                        <!-- Success checkmark overlay on hover -->
                        <span class='absolute inset-0 bg-success/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center'>
                            <svg class='w-6 h-6 text-white' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                                <path stroke-linecap='round' stroke-linejoin='round' stroke-width='3' d='M5 13l4 4L19 7'></path>
                            </svg>
                        </span>
                    </div>
                </div>
                <h4 class='font-bold text-center mb-2 text-base text-primary'>Service Launch</h4>
                <p class='text-sm text-center text-base-content/80 leading-relaxed'>
                    Route implementation with ongoing monitoring and optimization as your needs evolve.
                </p>
            </div>
        </div>

        <style>
            @keyframes progress-flow {
                0% {
                    width: 0%;
                }
                100% {
                    width: 100%;
                }
            }

            .animate-progress-flow {
                animation: progress-flow 3s ease-out forwards;
                animation-delay: 0.5s;
            }

            @media (prefers-reduced-motion: reduce) {
                .animate-progress-flow {
                    animation: none;
                    width: 100%;
                }
            }
        </style>
    </Section>

    <Cta {...ctaData} />
</Layout>
