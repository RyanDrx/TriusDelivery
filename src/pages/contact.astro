---
import Layout from '@layouts/Layout.astro';
import SEO from '@components/SEO.astro';
import Hero from '@components/Hero.astro';
import Section from '@components/Section.astro';
import WaveClip from '@components/WaveClip.astro';
import { localBusiness, webSite } from '../lib/schema.ts';

const formData = {
    _type: 'section',
    title: 'Request Your Quote',
    subtitle: 'Secure inquiry form - No PHI information required',
    body: 'Complete this form to receive a customized quote for your medical courier needs. We guarantee HIPAA compliance and will respond within 24 hours.'
};

const schema = {
    '@context': 'https://schema.org',
    '@graph': [localBusiness(), webSite()]
};
---

<Layout
    title='Contact Us - Trius LLC Medical Courier Services'
    description='Contact Trius LLC for medical courier services. 24/7 STAT line available. Request quotes for scheduled routes and equipment transport. HIPAA compliant communication.'
>
    <Fragment slot='head'>
        <SEO
            title='Contact Us - Trius LLC Medical Courier Services'
            description='Contact Trius LLC for medical courier services. 24/7 STAT line available. Request quotes for scheduled routes and equipment transport. HIPAA compliant communication.'
            graph={schema}
        />
    </Fragment>

    <Hero
        backgroundImage='/Images/med back.webp'
        overlayClass='bg-gradient-to-r from-primary/80 via-primary/60 to-secondary/70'
        minHeight='min-h-[40vh]'
    >
        <div class='text-center max-w-5xl mx-auto'>
            <!-- Page Badge -->
            <div class='inline-flex items-center gap-3 mb-8 px-6 py-3 bg-white/20 backdrop-blur-sm rounded-full border border-white/30'>
                <iconify-icon icon='heroicons:phone' width='24' height='24' style='color: white;'></iconify-icon>
                <span class='text-white font-bold tracking-wide uppercase'>Contact Us</span>
            </div>

            <!-- Main Title -->
            <h1 class='text-4xl lg:text-6xl font-black text-white mb-6 leading-tight'>Contact Trius LLC</h1>

            <!-- Subtitle -->
            <div class='flex flex-wrap justify-center gap-4 mb-8 text-white/90 font-medium'>
                <span class='flex items-center gap-2'>
                    <iconify-icon icon='heroicons:clock' width='20' height='20'></iconify-icon>
                    24/7 Support
                </span>
                <span class='flex items-center gap-2'>
                    <iconify-icon icon='heroicons:bolt' width='20' height='20'></iconify-icon>
                    Fast Response
                </span>
                <span class='flex items-center gap-2'>
                    <iconify-icon icon='heroicons:shield-check' width='20' height='20'></iconify-icon>
                    Professional Service
                </span>
            </div>

            <!-- Description -->
            <p class='text-xl lg:text-2xl text-white/90 mb-10 max-w-4xl mx-auto leading-relaxed'>
                Ready to improve your medical logistics? Get in touch with our team for a customized quote and discover how Trius LLC can
                streamline your courier needs.
            </p>

            <!-- Action Buttons -->
            <div class='flex flex-col sm:flex-row gap-4 justify-center items-center'>
                <a
                    href='tel:1-800-TRIUS-911'
                    class='btn btn-accent btn-lg px-8 py-4 text-lg font-bold hover:scale-105 transition-all duration-300'
                >
                    Emergency STAT Service
                </a>
                <a
                    href='#contact-form'
                    class='text-white font-semibold hover:text-primary-light transition-colors duration-300 flex items-center gap-2'
                >
                    Request Quote
                    <iconify-icon icon='heroicons:arrow-down' width='20' height='20'></iconify-icon>
                </a>
            </div>
        </div>
    </Hero>
    <!-- Contact Methods Section -->
    <Section class='bg-base-200 !py-12'>
        <div class='text-center mb-8'>
            <h2 class='text-3xl lg:text-4xl font-black font-heading text-primary mb-4'>Get in Touch</h2>
            <p class='text-lg text-base-content/70 max-w-2xl mx-auto'>Multiple ways to reach our team</p>
        </div>

        <div class='grid md:grid-cols-2 gap-6 max-w-4xl mx-auto'>
            <div class='bg-white rounded-lg p-6 shadow-lg text-center'>
                <div class='w-12 h-12 bg-accent rounded-full flex items-center justify-center mx-auto mb-4'>
                    <svg
                        xmlns='http://www.w3.org/2000/svg'
                        fill='none'
                        viewBox='0 0 24 24'
                        stroke-width='2'
                        stroke='currentColor'
                        class='w-6 h-6 text-white'
                    >
                        <path
                            stroke-linecap='round'
                            stroke-linejoin='round'
                            d='M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z'
                        >
                        </path>
                    </svg>
                </div>
                <h3 class='text-xl font-bold text-primary mb-2'>24/7 STAT Service</h3>
                <p class='text-base-content/70 mb-4'>Emergency medical deliveries</p>
                <a href='tel:1-800-TRIUS-911' class='btn btn-accent'>Call STAT Line</a>
            </div>

            <div class='bg-white rounded-lg p-6 shadow-lg text-center'>
                <div class='w-12 h-12 bg-primary rounded-full flex items-center justify-center mx-auto mb-4'>
                    <svg
                        xmlns='http://www.w3.org/2000/svg'
                        fill='none'
                        viewBox='0 0 24 24'
                        stroke-width='2'
                        stroke='currentColor'
                        class='w-6 h-6 text-white'
                    >
                        <path
                            stroke-linecap='round'
                            stroke-linejoin='round'
                            d='M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z'
                        >
                        </path>
                    </svg>
                </div>
                <h3 class='text-xl font-bold text-primary mb-2'>Business Support</h3>
                <p class='text-base-content/70 mb-4'>General inquiries & scheduling</p>
                <a href='tel:1-800-TRIUS-LLC' class='btn btn-primary'>Call Support</a>
            </div>
        </div>
    </Section>

    <!-- Contact Form Section with Background -->
    <WaveClip side='both' class='relative py-16 sm:py-20 lg:py-24 overflow-hidden'>
        <div class='absolute inset-0 bg-gradient-to-br from-primary/60 via-primary/40 to-secondary/50'></div>
        <!-- Animated overlay for extra pop -->
        <div class='absolute inset-0 bg-gradient-to-tr from-secondary/30 via-transparent to-primary/30 opacity-80 animate-gradient-shift'>
        </div>
        <!-- Background Image -->
        <div class='absolute inset-0 opacity-2'>
            <div
                class='absolute inset-0'
                style='background-image: url("/Images/couriour boxes.webp"); background-size: cover; background-repeat: no-repeat; background-position: center;'
            >
            </div>
        </div>
        <!-- Subtle texture overlay -->
        <div class='absolute inset-0 bg-white/70'></div>

        <div class='relative z-10 py-20'>
            <Section {...formData} class='!py-8 sm:!py-12'>
                <div id='contact-form' class='max-w-2xl mx-auto'>
                    <form name='contact' method='POST' data-netlify='true' class='space-y-4 bg-base-100 p-6 rounded-2xl shadow-lg'>
                        <input type='hidden' name='form-name' value='contact' />
                        <div class='grid grid-cols-1 md:grid-cols-2 gap-4'>
                            <div class='form-control'>
                                <label class='label' for='name'>
                                    <span class='label-text font-semibold'>Full Name *</span>
                                </label>
                                <input
                                    type='text'
                                    id='name'
                                    name='name'
                                    required
                                    class='input input-bordered w-full'
                                    placeholder='Your full name'
                                />
                            </div>

                            <div class='form-control'>
                                <label class='label' for='company'>
                                    <span class='label-text font-semibold'>Company/Organization *</span>
                                </label>
                                <input
                                    type='text'
                                    id='company'
                                    name='company'
                                    required
                                    class='input input-bordered w-full'
                                    placeholder='Hospital, clinic, lab, etc.'
                                />
                            </div>
                        </div>

                        <div class='grid grid-cols-1 md:grid-cols-2 gap-4'>
                            <div class='form-control'>
                                <label class='label' for='email'>
                                    <span class='label-text font-semibold'>Email Address *</span>
                                </label>
                                <input
                                    type='email'
                                    id='email'
                                    name='email'
                                    required
                                    class='input input-bordered w-full'
                                    placeholder='your@email.com'
                                />
                            </div>

                            <div class='form-control'>
                                <label class='label' for='phone'>
                                    <span class='label-text font-semibold'>Phone Number *</span>
                                </label>
                                <input
                                    type='tel'
                                    id='phone'
                                    name='phone'
                                    required
                                    class='input input-bordered w-full'
                                    placeholder='(555) 123-4567'
                                />
                            </div>
                        </div>

                        <div class='form-control'>
                            <label class='label' for='service'>
                                <span class='label-text font-semibold'>Service Needed *</span>
                            </label>
                            <select id='service' name='service' required class='select select-bordered w-full'>
                                <option value=''>Select service type</option>
                                <option value='stat'>STAT Deliveries</option>
                                <option value='scheduled'>Scheduled Routes</option>
                                <option value='equipment'>Specialized Equipment Transport</option>
                                <option value='multiple'>Multiple Services</option>
                                <option value='consultation'>General Consultation</option>
                            </select>
                        </div>

                        <div class='form-control'>
                            <label class='label' for='location'>
                                <span class='label-text font-semibold'>Primary Service Location</span>
                            </label>
                            <input
                                type='text'
                                id='location'
                                name='location'
                                class='input input-bordered w-full'
                                placeholder='City, State (e.g., Seattle, WA)'
                            />
                        </div>

                        <div class='form-control'>
                            <label class='label' for='notes'>
                                <span class='label-text font-semibold'>Additional Information</span>
                            </label>
                            <textarea
                                id='notes'
                                name='notes'
                                rows='4'
                                class='textarea textarea-bordered w-full'
                                placeholder='Please describe your specific needs, frequency, special requirements, etc.'
                            >
                            </textarea>
                        </div>

                        <div class='form-control'>
                            <label class='label cursor-pointer justify-start gap-3'>
                                <input type='checkbox' class='checkbox checkbox-primary' required />
                                <span class='label-text'>
                                    I agree to the <a href='/privacy' class='link link-primary'>privacy policy</a> and understand that no PHI
                                    should be included in this form.
                                </span>
                            </label>
                        </div>

                        <div class='form-control'>
                            <button type='submit' class='btn btn-primary btn-lg w-full'>Request Quote</button>
                        </div>
                    </form>

                    <div class='text-center mt-6'>
                        <p class='text-sm text-base-content/70'>
                            <strong>Important:</strong> This form is for quote requests only. Do not include any protected health information
                            (PHI) or patient data. For emergency STAT services, please call our 24/7 line directly.
                        </p>
                    </div>
                </div>
            </Section>
        </div>
    </WaveClip>

    <!-- What Happens Next Section -->
    <Section class='bg-base-100 !py-12'>
        <div class='text-center mb-8'>
            <h2 class='text-3xl lg:text-4xl font-black font-heading text-primary mb-4'>What Happens Next?</h2>
            <p class='text-lg text-base-content/70 max-w-2xl mx-auto'>Our simple response process</p>
        </div>

        <div class='grid md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-6xl mx-auto'>
            <div class='text-center'>
                <div class='w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4'>
                    <span class='text-2xl font-black text-primary'>1</span>
                </div>
                <h3 class='text-lg font-bold text-primary mb-2'>Immediate Confirmation</h3>
                <p class='text-sm text-base-content/70'>You'll receive confirmation we've received your inquiry</p>
            </div>

            <div class='text-center'>
                <div class='w-16 h-16 bg-secondary/10 rounded-full flex items-center justify-center mx-auto mb-4'>
                    <span class='text-2xl font-black text-secondary'>2</span>
                </div>
                <h3 class='text-lg font-bold text-primary mb-2'>Needs Assessment</h3>
                <p class='text-sm text-base-content/70'>We'll review your requirements and contact you for details</p>
            </div>

            <div class='text-center'>
                <div class='w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-4'>
                    <span class='text-2xl font-black text-accent'>3</span>
                </div>
                <h3 class='text-lg font-bold text-primary mb-2'>Custom Quote</h3>
                <p class='text-sm text-base-content/70'>Within 24 hours, receive a detailed tailored quote</p>
            </div>

            <div class='text-center'>
                <div class='w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4'>
                    <span class='text-2xl font-black text-primary'>4</span>
                </div>
                <h3 class='text-lg font-bold text-primary mb-2'>Service Setup</h3>
                <p class='text-sm text-base-content/70'>Quick setup and dedicated courier team assignment</p>
            </div>
        </div>

        <!-- Simple compliance note -->
        <div class='mt-12 text-center bg-base-200 rounded-lg p-6 max-w-4xl mx-auto'>
            <h3 class='text-lg font-bold text-primary mb-3'>🔒 Your Information is Secure</h3>
            <p class='text-sm text-base-content/70'>No PHI required for quotes - just your contact details and service needs.</p>
        </div>
    </Section>

    <!-- Hidden form for Netlify static form detection -->
    <form name='contact' data-netlify='true' netlify-honeypot='bot-field' hidden>
        <input type='text' name='name' />
        <input type='text' name='company' />
        <input type='email' name='email' />
        <input type='tel' name='phone' />
        <select name='service'>
            <option value='stat'>STAT Deliveries</option>
            <option value='scheduled'>Scheduled Routes</option>
            <option value='equipment'>Specialized Equipment Transport</option>
            <option value='multiple'>Multiple Services</option>
            <option value='consultation'>General Consultation</option>
        </select>
        <input type='text' name='location' />
        <textarea name='notes'></textarea>
    </form>
</Layout>
