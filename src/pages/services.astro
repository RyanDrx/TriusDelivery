---
import Layout from '@layouts/Layout.astro';
import SEO from '@components/SEO.astro';
import Hero from '@components/Hero.astro';
import Cards from '@components/Cards.astro';
import Cta from '@components/Cta.astro';
import FeatureCard from '@components/FeatureCard.astro';
import ComplianceCard from '@components/ComplianceCard.astro';
import { localBusiness, webSite, serviceStat, serviceRoutes, serviceEquipment } from '../lib/schema.ts';
import WaveClip from '@components/WaveClip.astro';

const ctaData = {
    _type: 'ctaSection',
    title: 'Ready to Partner with Trius for Your Medical Logistics?',
    body: 'When you need a dependable, HIPAA-compliant medical courier, Trius is here to help. By partnering with Trius, you gain a trusted logistics partner who ensures every delivery is safe, accurate, compliant, and on time.',
    actions: [
        {
            _key: '1',
            _type: 'actionButton',
            label: 'Request Custom Quote',
            url: '/contact',
            style: 'primary'
        },
        {
            _key: '2',
            _type: 'actionLink',
            label: 'View Coverage Areas',
            url: '/coverage'
        },
        {
            _key: '3',
            _type: 'actionLink',
            label: 'Learn About Our Company',
            url: '/about'
        }
    ]
};

const schema = {
    '@context': 'https://schema.org',
    '@graph': [localBusiness(), webSite(), serviceStat(), serviceRoutes(), serviceEquipment()]
};
---

<Layout
    title='Medical Courier Services - Trius LLC'
    description='Professional medical courier services including STAT deliveries, scheduled routes, and specialized equipment transport. HIPAA/OSHA compliant across WA, OR, ID, MT, and CA.'
>
    <Fragment slot='head'>
        <SEO
            title='Medical Courier Services - Trius LLC'
            description='Professional medical courier services including STAT deliveries, scheduled routes, and specialized equipment transport. HIPAA/OSHA compliant across WA, OR, ID, MT, and CA.'
            graph={schema}
        />
    </Fragment>

    <Hero
        backgroundImage='/Images/med equip.webp'
        overlayClass='bg-gradient-to-r from-primary/80 via-primary/60 to-secondary/70'
        minHeight='min-h-[70vh]'
    >
        <div class='text-center max-w-5xl mx-auto'>
            <!-- Page Badge -->
            <div class='inline-flex items-center gap-3 mb-8 px-6 py-3 bg-white/20 backdrop-blur-sm rounded-full border border-white/30'>
                <iconify-icon icon='material-symbols:medical-services' width='24' height='24' style='color: white;'></iconify-icon>
                <span class='text-white font-bold tracking-wide uppercase'>Professional Services</span>
            </div>

            <!-- Main Title -->
            <h1 class='text-4xl lg:text-6xl font-black text-white mb-6 leading-tight'>Medical Courier Services</h1>

            <!-- Subtitle -->
            <div class='flex flex-wrap justify-center gap-4 mb-8 text-white/90 font-medium'>
                <span class='flex items-center gap-2'>
                    <iconify-icon icon='heroicons:shield-check' width='20' height='20'></iconify-icon>
                    HIPAA/OSHA Compliant
                </span>
                <span class='flex items-center gap-2'>
                    <iconify-icon icon='heroicons:truck' width='20' height='20'></iconify-icon>
                    Specialized Equipment
                </span>
                <span class='flex items-center gap-2'>
                    <iconify-icon icon='heroicons:map-pin' width='20' height='20'></iconify-icon>
                    Real-Time Tracking
                </span>
            </div>

            <!-- Description -->
            <p class='text-xl lg:text-2xl text-white/90 mb-10 max-w-4xl mx-auto leading-relaxed'>
                Comprehensive medical logistics solutions designed for healthcare facilities, laboratories, and medical equipment providers
                across the Pacific Northwest and California.
            </p>

            <!-- Action Buttons -->
            <div class='flex flex-col sm:flex-row gap-4 justify-center items-center'>
                <a href='/contact' class='btn btn-secondary btn-lg px-8 py-4 text-lg font-bold hover:scale-105 transition-all duration-300'>
                    Get Quote Today
                </a>
                <a
                    href='/coverage'
                    class='text-white font-semibold hover:text-secondary-light transition-colors duration-300 flex items-center gap-2'
                >
                    View Coverage Areas
                    <iconify-icon icon='heroicons:arrow-right' width='20' height='20'></iconify-icon>
                </a>
            </div>
        </div>
    </Hero>
    <!-- Main Services Section -->
    <section class='py-20 relative overflow-hidden'>
        <div class='max-w-7xl mx-auto px-4 lg:px-6 relative z-10'>
            <div class='text-center mb-16'>
                <h2 class='text-4xl lg:text-5xl font-black text-neutral-dark mb-6'>Comprehensive Medical Logistics Solutions</h2>
                <p class='text-xl text-neutral max-w-3xl mx-auto'>
                    Professional, compliant, and reliable courier services tailored for healthcare organizations
                </p>
            </div>

            <div class='space-y-20'>
                <!-- STAT Deliveries -->
                <div class='grid lg:grid-cols-2 gap-12 items-center'>
                    <div class='order-2 lg:order-1'>
                        <div class='inline-flex items-center gap-3 mb-6 px-4 py-2 bg-accent/10 rounded-full'>
                            <iconify-icon icon='heroicons:clock' width='20' height='20' style='color: #ef4444;'></iconify-icon>
                            <span class='text-accent font-bold text-sm uppercase tracking-wide'>Emergency Service</span>
                        </div>
                        <h3 class='text-3xl lg:text-4xl font-black text-neutral-dark mb-4'>STAT Deliveries</h3>
                        <p class='text-lg text-neutral mb-6 leading-relaxed'>
                            Rapid, secure, and compliant transport for specimens, organs, and urgent medical devices. When time is critical,
                            Trius STAT delivery provides immediate response with documented chain-of-custody protocols and real-time
                            tracking.
                        </p>

                        <div class='grid md:grid-cols-2 gap-4 mb-8'>
                            <div class='flex items-start gap-3'>
                                <iconify-icon icon='heroicons:clock' width='20' height='20' style='color: #1a4e8a;' class='mt-1'
                                ></iconify-icon>
                                <div>
                                    <h4 class='font-bold text-neutral-dark'>Emergency Response</h4>
                                    <p class='text-sm text-neutral'>Response within 30 minutes</p>
                                </div>
                            </div>
                            <div class='flex items-start gap-3'>
                                <iconify-icon icon='heroicons:map-pin' width='20' height='20' style='color: #1a4e8a;' class='mt-1'
                                ></iconify-icon>
                                <div>
                                    <h4 class='font-bold text-neutral-dark'>Real-Time Tracking</h4>
                                    <p class='text-sm text-neutral'>Live GPS tracking updates</p>
                                </div>
                            </div>
                            <div class='flex items-start gap-3'>
                                <iconify-icon icon='heroicons:document-check' width='20' height='20' style='color: #1a4e8a;' class='mt-1'
                                ></iconify-icon>
                                <div>
                                    <h4 class='font-bold text-neutral-dark'>Chain-of-Custody</h4>
                                    <p class='text-sm text-neutral'>Complete documentation</p>
                                </div>
                            </div>
                            <div class='flex items-start gap-3'>
                                <iconify-icon icon='heroicons:shield-check' width='20' height='20' style='color: #1a4e8a;' class='mt-1'
                                ></iconify-icon>
                                <div>
                                    <h4 class='font-bold text-neutral-dark'>HIPAA Compliant</h4>
                                    <p class='text-sm text-neutral'>Full regulatory compliance</p>
                                </div>
                            </div>
                        </div>

                        <a href='/services/stat-delivery' class='btn btn-accent btn-lg'>Learn More About STAT Delivery</a>
                    </div>
                    <div class='order-1 lg:order-2'>
                        <div class='bg-gradient-to-br from-accent/10 to-accent/5 rounded-3xl p-8 text-center'>
                            <iconify-icon icon='heroicons:truck' width='120' height='120' style='color: #ef4444;' class='mx-auto mb-6'
                            ></iconify-icon>
                            <div class='text-4xl font-black text-accent mb-2'>24/7</div>
                            <div class='text-neutral font-medium'>Emergency Response</div>
                        </div>
                    </div>
                </div>

                <!-- Scheduled Routes -->
                <div class='grid lg:grid-cols-2 gap-12 items-center'>
                    <div class='bg-gradient-to-br from-secondary/10 to-secondary/5 rounded-3xl p-8 text-center'>
                        <iconify-icon icon='heroicons:calendar-days' width='120' height='120' style='color: #2f855a;' class='mx-auto mb-6'
                        ></iconify-icon>
                        <div class='text-4xl font-black text-secondary mb-2'>Daily</div>
                        <div class='text-neutral font-medium'>Reliable Routes</div>
                    </div>
                    <div>
                        <div class='inline-flex items-center gap-3 mb-6 px-4 py-2 bg-secondary/10 rounded-full'>
                            <iconify-icon icon='heroicons:calendar-days' width='20' height='20' style='color: #2f855a;'></iconify-icon>
                            <span class='text-secondary font-bold text-sm uppercase tracking-wide'>Scheduled Service</span>
                        </div>
                        <h3 class='text-3xl lg:text-4xl font-black text-neutral-dark mb-4'>Scheduled Routes</h3>
                        <p class='text-lg text-neutral mb-6 leading-relaxed'>
                            For organizations with predictable transport needs, our scheduled routes provide efficiency and consistency.
                            From daily specimen pickups to weekly supply deliveries, Trius builds routes around your timeline.
                        </p>

                        <div class='grid md:grid-cols-2 gap-4 mb-8'>
                            <div class='flex items-start gap-3'>
                                <iconify-icon icon='heroicons:calendar-days' width='20' height='20' style='color: #1a4e8a;' class='mt-1'
                                ></iconify-icon>
                                <div>
                                    <h4 class='font-bold text-neutral-dark'>Flexible Scheduling</h4>
                                    <p class='text-sm text-neutral'>Daily, weekly, or monthly</p>
                                </div>
                            </div>
                            <div class='flex items-start gap-3'>
                                <iconify-icon icon='heroicons:user-group' width='20' height='20' style='color: #1a4e8a;' class='mt-1'
                                ></iconify-icon>
                                <div>
                                    <h4 class='font-bold text-neutral-dark'>Dedicated Couriers</h4>
                                    <p class='text-sm text-neutral'>Consistent assignments</p>
                                </div>
                            </div>
                            <div class='flex items-start gap-3'>
                                <iconify-icon icon='heroicons:map' width='20' height='20' style='color: #1a4e8a;' class='mt-1'
                                ></iconify-icon>
                                <div>
                                    <h4 class='font-bold text-neutral-dark'>Route Optimization</h4>
                                    <p class='text-sm text-neutral'>Technology-driven efficiency</p>
                                </div>
                            </div>
                            <div class='flex items-start gap-3'>
                                <iconify-icon icon='heroicons:currency-dollar' width='20' height='20' style='color: #1a4e8a;' class='mt-1'
                                ></iconify-icon>
                                <div>
                                    <h4 class='font-bold text-neutral-dark'>Cost-Effective</h4>
                                    <p class='text-sm text-neutral'>Bulk transport pricing</p>
                                </div>
                            </div>
                        </div>

                        <a href='/services/scheduled-routes' class='btn btn-secondary btn-lg'>Learn More About Scheduled Routes</a>
                    </div>
                </div>

                <!-- Specialized Equipment Transport -->
                <div class='grid lg:grid-cols-2 gap-12 items-center'>
                    <div class='order-2 lg:order-1'>
                        <div class='inline-flex items-center gap-3 mb-6 px-4 py-2 bg-primary/10 rounded-full'>
                            <iconify-icon icon='heroicons:beaker' width='20' height='20' style='color: #1a4e8a;'></iconify-icon>
                            <span class='text-primary font-bold text-sm uppercase tracking-wide'>Specialized Service</span>
                        </div>
                        <h3 class='text-3xl lg:text-4xl font-black text-neutral-dark mb-4'>Specialized Equipment Transport</h3>
                        <p class='text-lg text-neutral mb-6 leading-relaxed'>
                            Transporting fragile or regulated medical equipment requires special expertise. Our couriers are trained in
                            handling sensitive devices, biohazard materials, and temperature-controlled shipments.
                        </p>

                        <div class='grid md:grid-cols-2 gap-4 mb-8'>
                            <div class='flex items-start gap-3'>
                                <iconify-icon icon='heroicons:beaker' width='20' height='20' style='color: #1a4e8a;' class='mt-1'
                                ></iconify-icon>
                                <div>
                                    <h4 class='font-bold text-neutral-dark'>Temperature Control</h4>
                                    <p class='text-sm text-neutral'>Climate-controlled transport</p>
                                </div>
                            </div>
                            <div class='flex items-start gap-3'>
                                <iconify-icon
                                    icon='heroicons:shield-exclamation'
                                    width='20'
                                    height='20'
                                    style='color: #1a4e8a;'
                                    class='mt-1'></iconify-icon>
                                <div>
                                    <h4 class='font-bold text-neutral-dark'>Hazmat Certified</h4>
                                    <p class='text-sm text-neutral'>Certified drivers</p>
                                </div>
                            </div>
                            <div class='flex items-start gap-3'>
                                <iconify-icon icon='heroicons:cube' width='20' height='20' style='color: #1a4e8a;' class='mt-1'
                                ></iconify-icon>
                                <div>
                                    <h4 class='font-bold text-neutral-dark'>Custom Packaging</h4>
                                    <p class='text-sm text-neutral'>Specialized solutions</p>
                                </div>
                            </div>
                            <div class='flex items-start gap-3'>
                                <iconify-icon icon='heroicons:document-text' width='20' height='20' style='color: #1a4e8a;' class='mt-1'
                                ></iconify-icon>
                                <div>
                                    <h4 class='font-bold text-neutral-dark'>Full Insurance</h4>
                                    <p class='text-sm text-neutral'>Comprehensive coverage</p>
                                </div>
                            </div>
                        </div>

                        <a href='/services/specialized-equipment' class='btn btn-primary btn-lg'>Learn More About Equipment Transport</a>
                    </div>
                    <div class='order-1 lg:order-2'>
                        <div class='bg-gradient-to-br from-primary/10 to-primary/5 rounded-3xl p-8 text-center'>
                            <iconify-icon icon='heroicons:cube' width='120' height='120' style='color: #1a4e8a;' class='mx-auto mb-6'
                            ></iconify-icon>
                            <div class='text-4xl font-black text-primary mb-2'>100%</div>
                            <div class='text-neutral font-medium'>Secure Transport</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Why Choose Trius Section -->
    <section class='py-20 bg-gradient-to-br from-slate-50 via-primary/5 to-secondary/5'>
        <div class='max-w-7xl mx-auto px-4 lg:px-6'>
            <div class='text-center mb-16'>
                <h2 class='text-4xl lg:text-5xl font-black text-neutral-dark mb-6'>Why Choose Trius LLC?</h2>
                <p class='text-xl text-neutral max-w-3xl mx-auto'>More than a courier — we are your long-term logistics partner</p>
            </div>

            <div class='grid md:grid-cols-2 lg:grid-cols-3 gap-8'>
                <FeatureCard
                    icon='heroicons:shield-check'
                    title='Accuracy & Safety'
                    description='Every courier is rigorously trained to prevent misdeliveries and protect specimen integrity. Our documented procedures ensure safe, on-time delivery.'
                    gradient='primary'
                />
                <FeatureCard
                    icon='heroicons:clock'
                    title='Reliability & Readiness'
                    description='Always on-call, 24/7, for both scheduled and urgent deliveries. When healthcare organizations need dependable logistics, Trius delivers.'
                    gradient='secondary'
                />
                <FeatureCard
                    icon='heroicons:academic-cap'
                    title='Expertise & Professionalism'
                    description='Experienced professionals oversee shipments with precision and courtesy. Our team understands the critical nature of medical logistics.'
                    gradient='accent'
                />
                <FeatureCard
                    icon='material-symbols:lightbulb-2-outline'
                    title='Innovative Solutions'
                    description='Technology-driven logistics with optimized routes and proactive communication. We embrace complex challenges with cutting-edge solutions.'
                    gradient='primary'
                />
                <FeatureCard
                    icon='material-symbols:handshake-outline-sharp'
                    title='Partnership Approach'
                    description='We build lasting partnerships that create mutual success. Tailoring logistics solutions to meet your unique organizational needs.'
                    gradient='secondary'
                />
                <FeatureCard
                    icon='heroicons:document-check'
                    title='Compliance Excellence'
                    description='We not only meet but exceed HIPAA and OSHA requirements. Continuous training ensures we stay ahead of industry standards.'
                    gradient='accent'
                />
            </div>
        </div>
    </section>

    <!-- Compliance Section -->
    <section class='py-20 relative overflow-hidden'>
        <WaveClip side='both' amplitude={1.5} baseline={95} waves={1.5} phase={0} samples={36} class='absolute inset-0 opacity-2 py-24'>
            <div
                class='absolute inset-0 min-h-44'
                style='background-image: url("/Images/medical phials.webp"); background-size: cover; background-repeat: no-repeat; background-position: center;'
            >
            </div>
            <div class='absolute inset-0 bg-white/85'></div>
        </WaveClip>

        <div class='max-w-7xl mx-auto px-4 lg:px-6 relative z-10 py-24'>
            <div class='text-center mb-16'>
                <h2 class='text-4xl lg:text-5xl font-black text-neutral-dark mb-6'>Compliance & Safety Standards</h2>
                <p class='text-xl text-neutral max-w-3xl mx-auto'>Absolute regulatory adherence for healthcare logistics</p>
            </div>

            <div class='grid lg:grid-cols-3 gap-8'>
                <ComplianceCard
                    icon='heroicons:shield-check'
                    title='HIPAA Compliance'
                    description="Full HIPAA compliance with secure handling of all protected health information and medical specimens. We maintain a strict 'no PHI collection' policy."
                    gradient='primary'
                    features={[
                        'Secure handling of protected health information',
                        'Privacy protection protocols at every step',
                        'No PHI collection in digital communications'
                    ]}
                />
                <ComplianceCard
                    icon='heroicons:exclamation-triangle'
                    title='OSHA Certified'
                    description='All drivers are OSHA certified for safe handling of medical materials and hazardous substances. Ongoing training in specimen handling and biohazard safety.'
                    gradient='secondary'
                    features={[
                        'Certified drivers for hazardous materials',
                        'Ongoing biohazard safety training',
                        'Proper specimen handling protocols'
                    ]}
                />
                <ComplianceCard
                    icon='heroicons:document-text'
                    title='Insured & Bonded'
                    description='Comprehensive insurance coverage and bonding for complete protection. State-of-the-art logistics technology with rigorous chain of custody procedures.'
                    gradient='accent'
                    features={['Full insurance coverage for all shipments', 'Bonded courier services', 'Chain of custody documentation']}
                />
            </div>
        </div>
    </section>

    <!-- Coverage Area Section -->
    <section class='py-20 bg-gradient-to-br from-slate-50 via-primary/5 to-secondary/5'>
        <div class='max-w-7xl mx-auto px-4 lg:px-6'>
            <div class='text-center mb-16'>
                <h2 class='text-4xl lg:text-5xl font-black text-neutral-dark mb-6'>Service Coverage Areas</h2>
                <p class='text-xl text-neutral max-w-3xl mx-auto'>
                    Comprehensive medical logistics across the Pacific Northwest & California
                </p>
            </div>

            <div class='max-w-4xl mx-auto'>
                <!-- Coverage Details -->
                <div>
                    <div class='inline-flex items-center gap-3 mb-6 px-4 py-2 bg-primary/10 rounded-full'>
                        <iconify-icon icon='heroicons:map' width='20' height='20' style='color: #1a4e8a;'></iconify-icon>
                        <span class='text-primary font-bold text-sm uppercase tracking-wide'>Regional Coverage</span>
                    </div>

                    <h3 class='text-3xl lg:text-4xl font-black text-neutral-dark mb-6'>Five-State Service Network</h3>

                    <p class='text-lg text-neutral mb-8 leading-relaxed'>
                        Trius proudly serves healthcare organizations across the Pacific Northwest and California. With deep local knowledge
                        and growing regional coverage, we provide dependable in-state and cross-state deliveries.
                    </p>

                    <div class='grid md:grid-cols-2 gap-6 mb-8'>
                        <div class='flex items-start gap-3'>
                            <div
                                class='w-12 h-12 bg-gradient-to-br from-primary to-primary-dark rounded-xl flex items-center justify-center flex-shrink-0 p-2'
                            >
                                <img
                                    src='/states/WA.svg'
                                    alt='Washington State'
                                    class='w-full h-full object-contain'
                                    style='filter: brightness(0) saturate(100%) invert(100%);'
                                />
                            </div>
                            <div>
                                <h4 class='font-bold text-neutral-dark mb-1'>Washington</h4>
                                <p class='text-sm text-neutral'>Seattle, Tacoma, Spokane, Bellevue</p>
                            </div>
                        </div>

                        <div class='flex items-start gap-3'>
                            <div
                                class='w-12 h-12 bg-gradient-to-br from-secondary to-secondary-dark rounded-xl flex items-center justify-center flex-shrink-0 p-2'
                            >
                                <img
                                    src='/states/OR.svg'
                                    alt='Oregon State'
                                    class='w-full h-full object-contain'
                                    style='filter: brightness(0) saturate(100%) invert(100%);'
                                />
                            </div>
                            <div>
                                <h4 class='font-bold text-neutral-dark mb-1'>Oregon</h4>
                                <p class='text-sm text-neutral'>Portland, Eugene, Salem, Gresham</p>
                            </div>
                        </div>

                        <div class='flex items-start gap-3'>
                            <div
                                class='w-12 h-12 bg-gradient-to-br from-accent to-accent-dark rounded-xl flex items-center justify-center flex-shrink-0 p-2'
                            >
                                <img
                                    src='/states/ID.svg'
                                    alt='Idaho State'
                                    class='w-full h-full object-contain'
                                    style='filter: brightness(0) saturate(100%) invert(100%);'
                                />
                            </div>
                            <div>
                                <h4 class='font-bold text-neutral-dark mb-1'>Idaho</h4>
                                <p class='text-sm text-neutral'>Boise, Nampa, Meridian, Idaho Falls</p>
                            </div>
                        </div>

                        <div class='flex items-start gap-3'>
                            <div
                                class='w-12 h-12 bg-gradient-to-br from-primary to-primary-dark rounded-xl flex items-center justify-center flex-shrink-0 p-2'
                            >
                                <img
                                    src='/states/MT.svg'
                                    alt='Montana State'
                                    class='w-full h-full object-contain'
                                    style='filter: brightness(0) saturate(100%) invert(100%);'
                                />
                            </div>
                            <div>
                                <h4 class='font-bold text-neutral-dark mb-1'>Montana</h4>
                                <p class='text-sm text-neutral'>Billings, Missoula, Great Falls, Bozeman</p>
                            </div>
                        </div>

                        <div class='flex items-start gap-3 md:col-span-2'>
                            <div
                                class='w-12 h-12 bg-gradient-to-br from-secondary to-secondary-dark rounded-xl flex items-center justify-center flex-shrink-0 p-2'
                            >
                                <img
                                    src='/states/CA.svg'
                                    alt='California State'
                                    class='w-full h-full object-contain'
                                    style='filter: brightness(0) saturate(100%) invert(100%);'
                                />
                            </div>
                            <div>
                                <h4 class='font-bold text-neutral-dark mb-1'>California</h4>
                                <p class='text-sm text-neutral'>San Francisco, San Jose, Sacramento, Oakland</p>
                            </div>
                        </div>
                    </div>

                    <div class='bg-white/80 backdrop-blur-sm rounded-2xl p-6 border border-neutral/20'>
                        <div class='flex items-start gap-3'>
                            <iconify-icon
                                icon='heroicons:information-circle'
                                width='24'
                                height='24'
                                style='color: #1a4e8a;'
                                class='mt-1 flex-shrink-0'></iconify-icon>
                            <div>
                                <h4 class='font-bold text-neutral-dark mb-2'>Expanding Coverage</h4>
                                <p class='text-sm text-neutral leading-relaxed'>
                                    If you're outside these states, please contact us to confirm service availability. We're continuously
                                    expanding our network to serve more healthcare organizations.
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class='mt-8 text-center'>
                        <a href='/coverage' class='btn btn-primary btn-lg text-lg px-8 py-4'>
                            <iconify-icon icon='heroicons:map' width='24' height='24' class='mr-2'></iconify-icon>
                            View Coverage Map
                        </a>
                        <p class='text-sm text-neutral mt-3'>See detailed coverage areas and service zones</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Technology & Innovation Section -->
    <section class='py-20 relative overflow-hidden'>
        <WaveClip
            side='both'
            amplitude={1.8}
            baseline={95}
            waves={1.3}
            phase={45}
            samples={36}
            topBaseline={10}
